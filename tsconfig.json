{
	"compilerOptions": {
	  "module":   "Node16",
	  "target":   "ES2022",
	  "lib":      ["ES2022"],
	  "sourceMap": true,
	  "rootDir":  "src",
	  "outDir":   "out",
	  "strict":   true,
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "skipLibCheck": true
	},
	"include": [
	  "src/**/*.ts",
	  "src/test/**/*.ts"
	],
	"exclude": [
	  "node_modules",
	  "out"
	]
  }
  